@model Image
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Image</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group" id="mainCategory">
                        <select name="CategoryChildId" disabled>
                            <option value="@ViewBag.Product.Id">@ViewBag.Product.Name</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="File"></label>
                        <input class="form-control" asp-for="File" accept="image/*">
                        <span class="text-danger" asp-validation-for="File"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a class="btn btn-light" asp-controller="Image" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_Validation" />
}

