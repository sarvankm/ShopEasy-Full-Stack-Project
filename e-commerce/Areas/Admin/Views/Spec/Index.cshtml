@model IEnumerable<Specs>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Producer
                                </th>
                                <th>
                                    Production Year
                                </th>
                                <th>
                                    Type
                                </th>
                                <th>
                                    OS
                                </th>
                                <th>
                                    IsDeleted
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Specs item in Model)
                            {
                            <tr>
                                <td>
                                    @item.ProducerValue
                                </td>
                                <td>
                                    @item.ProductionYearValue
                                </td>
                                <td>
                                    @item.TypeValue
                                </td>
                                <td>
                                    @item.OSValue
                                </td>
                                <td>
                                    @if (item.IsDeleted == true)
                                    {
                                        <i class="mdi mdi-check" style="font-size: 30px; color: #71C016;"></i>
                                    }
                                    else
                                    {
                                        <i class="mdi mdi-close" style="font-size: 30px; color: #FF4747;"></i>

                                    }
                                </td>
                                <td>
                                    @if (item.IsDeleted != true)
                                    {
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


