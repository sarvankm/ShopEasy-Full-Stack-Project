@model Contact
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Contact</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Branch"></label>
                        <input class="form-control" asp-for="Branch">
                        <span class="text-danger" asp-validation-for="Branch"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactNumber"></label>
                        <input class="form-control" asp-for="ContactNumber">
                        <span class="text-danger" asp-validation-for="ContactNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactEmail"></label>
                        <input class="form-control" asp-for="ContactEmail">
                        <span class="text-danger" asp-validation-for="ContactEmail"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactLocation"></label>
                        <input class="form-control" asp-for="ContactLocation">
                        <span class="text-danger" asp-validation-for="ContactLocation"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a class="btn btn-light" asp-controller="Contact" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_Validation" />
}

