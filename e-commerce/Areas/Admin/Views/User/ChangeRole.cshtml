@model UserVM

@{
    ViewData["Title"] = "ChangeRole";
}

<div class=" row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">@Model.FullName</p>
                <p class="font-weight-500">@Model.Email</p>
                <a asp-action="Index">Go Back</a>
                <div class="mt-3">
                    <form class="forms-sample" method="post">
                        @foreach (string role in Model.Roles)
                        {
                            @if (Model.Role == role)
                            {
                                <input type="radio" name="Role" value="@role" checked />@role
                            }
                            else
                            {
                                <input type="radio" name="Role" value="@role" />@role
                            }
                        }
                        <button type="submit" class="btn btn-success mr-2">Change Role</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

