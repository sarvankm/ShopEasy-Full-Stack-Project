@model List<UserVM>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    FullName
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    UserName
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    Blocked
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM userVM in Model)
                            {
                                <tr>
                                    <td>
                                        @userVM.FullName
                                    </td>
                                    <td>
                                        @userVM.Email
                                    </td>
                                    <td>
                                        @userVM.UserName
                                    </td>
                                    <td>
                                        @userVM.Role
                                    </td>
                                    @if (userVM.IsDeleted)
                                    {
                                        <td class="text-danger">
                                            Disabled
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-success">
                                            Enabled
                                        </td>
                                    }

                                    <td>
                                        @if (userVM.IsDeleted)
                                        {
                                            <a class="btn btn-success" asp-action="IsActive" asp-route-id="@userVM.Id">
                                                Active
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-danger" asp-action="IsActive" asp-route-id="@userVM.Id">
                                                DeActive
                                            </a>
                                        }
                                        <a class="btn btn-warning" asp-action="ChangeRole" asp-route-id="@userVM.Id">
                                            Change Role
                                        </a>
                                        <a class="btn btn-danger" asp-action="ChangePassword" asp-route-id="@userVM.Id">
                                            Change Password
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
        </div>
    </div>

            <div class=" row mt-3 justify-content-center">
                <nav aria-label="...">
                    <ul class="pagination pagination-sm">
                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            if (ViewBag.Page == i)
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">@i</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-area="Admin" asp-controller="User" asp-action="Index" asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
            </div>

