@model UserVM

@{
    ViewData["Title"] = "IsActive";
}

<div class=" row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">@Model.FullName</p>
                <p class="font-weight-500">@Model.Email</p>
                <a asp-action="Index">Go Back</a>
                <div class="mt-3">
                    <form class="forms-sample" method="post">
                        @if (Model.IsDeleted)
                        {
                            <input type="hidden" name="IsActivated" value="false" />
                            <button type="submit" class="btn btn-success mr-2">Activate</button>
                        }
                        else
                        {
                            <input type="hidden" name="IsActivated" value="true" />
                            <button type="submit" class="btn btn-danger mr-2">DeActivate</button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

