@model Product
@{
    ViewData["Title"] = "Update";
}


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create New Product</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group"  >
                        <select name="CategoryId" disabled>
                         <option value="@Model.Category.Id">@Model.Category.Name</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select disabled>
                         <option value="@Model.CategoryChild.Id">@Model.CategoryChild.Name</option>
                        </select>
                    </div>
                    <div class="form-group" id="Brand" >
                        <select disabled>
                           <option value="@Model.Brend.Id">@Model.Brend.Name</option>
                        </select>
                    </div>
                    <div class="form-group" id="Specs">
                        <select  disabled>
                                <option value="@Model.Specs.Id">
                                    @Model.Specs.ProducerForView : @Model.Specs.ProducerValue |
                                    @Model.Specs.ProductionYearForView : @Model.Specs.ProductionYearValue |
                                    @Model.Specs.TypeForView :  @Model.Specs.TypeValue |
                                    @Model.Specs.OSForView : @Model.Specs.OSValue
                                </option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a class="btn btn-light" asp-controller="Product" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_Validation" />
}

