@model Product
@{
    ViewData["Title"] = "Details";
    int counter = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card" style="margin-bottom:0">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image by Color
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    SubCategory
                                </th>
                                <th>
                                    Brend
                                </th>
                                <th>
                                    Specs
                                </th>
                                <th>
                                    IsDeleted
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="width:150px">
                                    @foreach (var item in Model.ProductColors)
                                    {
                                        <p>
                                            @item.Color.Name
                                        :<img style="border-radius:0" src="~/img/@Model.Images.ToList()[counter].ImageName" onerror="this.onerror=null;this.src='/img/deleted.png'" />
                                    </p>
                                    counter++;
                                }
                                </td>
                                <td>
                                    @Model.Name
                                </td>
                                <td>
                                    @Model.Price
                                </td>
                                <td>
                                    @Model.Category.Name
                                </td>
                                <td>
                                    @Model.CategoryChild.Name
                                </td>
                                <td>
                                    @Model.Brend.Name
                                </td>
                                <td>
                                    @Model.Specs.ProducerForView : @Model.Specs.ProducerValue |
                                    @Model.Specs.ProductionYearForView : @Model.Specs.ProductionYearValue |
                                    @Model.Specs.TypeForView :  @Model.Specs.TypeValue |
                                    @Model.Specs.OSForView : @Model.Specs.OSValue
                                </td>
                                <td>
                                    @if (Model.IsDeleted == true)
                                    {
                                        <i class="mdi mdi-check" style="font-size: 30px; color: #71C016;"></i>
                                    }
                                    else
                                    {
                                        <i class="mdi mdi-close" style="font-size: 30px; color: #FF4747;"></i>

                                    }
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card" style="display:flex;align-items:center">
            <a class="btn btn-rounded btn-primary" asp-controller="Product" asp-action="Index"><i class="mdi mdi-keyboard-backspace"></i></a>
        </div>
    </div>
</div>


